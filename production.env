# DidactAI Production Environment Variables
# Copy these to your deployment platform's environment settings

# Django Configuration
SECRET_KEY=your-very-long-secret-production-key-minimum-50-characters-generate-new-one
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,your-domain.com

# Database (Auto-provided by Render/Railway/Heroku)
# DATABASE_URL=postgresql://user:password@host:port/database

# AI Configuration (Your working keys)
GEMINI_API_KEY=your-gemini-api-key-here
HUGGINGFACE_API_TOKEN=your-huggingface-token-here

# File Upload Settings
MAX_UPLOAD_SIZE=50000000
ALLOWED_FILE_EXTENSIONS=pdf,docx,pptx,png,jpg,jpeg

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,es,de,it,pt,ru,zh,ja,ar,he,tr

# Optional: Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Optional: AWS S3 (for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Optional: Redis (for caching)
# REDIS_URL=redis://localhost:6379/0

# Optional: Sentry (for error monitoring)
# SENTRY_DSN=your-sentry-dsn
